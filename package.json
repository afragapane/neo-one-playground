{
  "name": "@neo-one/playground",
  "author": "Alex DiCarlo <alexdicarlo@gmail.com>",
  "version": "1.0.0",
  "description": "NEOâ€¢ONE Playground.",
  "homepage": "https://neo-one.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-one-suite/neo-one-playground.git"
  },
  "bugs": {
    "url": "https://github.com/neo-one-suite/neo-one-playground/issues"
  },
  "license": "MIT",
  "keywords": [
    "neo",
    "blockchain",
    "neo-one",
    "dapp"
  ],
  "engines": {
    "node": ">=10.9.0"
  },
  "lint-staged": {
    "linters": {
      "**/*.{ts,tsx}": [
        "yarn run prettier --write",
        "git add",
        "yarn test --findRelatedTests --ci --passWithNoTests -w 4",
        "yarn run lint-files"
      ]
    },
    "ignore": [
      "node_modules/**/*"
    ]
  },
  "scripts": {
    "lint-staged": "node ./node_modules/.bin/lint-staged",
    "jest": "cross-env NODE_OPTIONS=\"--max-old-space-size=3072\" jest",
    "test": "yarn run jest",
    "tsc": "tsc && tsc -p contracts",
    "ts-node": "cross-env NODE_OPTIONS=\"--max-old-space-size=3072\" TS_NODE_PROJECT=tsconfig/tsconfig.es2018.cjs.json node -r ts-node/register/transpile-only",
    "prettier": "prettier --config .prettierrc",
    "nit:contracts": "yarn run prettier --list-different \"one/contracts/**/*.{ts,tsx}\"",
    "nit:source": "yarn run prettier --list-different \"src/**/*.{ts,tsx}\"",
    "nit": "yarn run nit:source && yarn run nit:contracts",
    "prettier:contracts": "yarn run prettier --write \"one/contracts/**/*.{ts,tsx}\"",
    "prettier:source": "yarn run prettier --write \"src/**/*.{ts,tsx}\"",
    "prettier:all": "yarn run prettier:source && yarn run prettier:contracts",
    "lint-files": "tslint --project . --format codeFrame",
    "lint:contracts": "yarn run lint-files 'contracts/**/*.ts'",
    "lint:source": "yarn run lint-files 'src/**/*.ts'",
    "lint": "yarn run lint:contracts && yarn run lint:source",
    "start": "webpack-dev-server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && echo \"Executing tsc...\" && tsc"
    }
  },
  "devDependencies": {
    "@neo-one/cli": "1.0.0-alpha.114",
    "@neo-one/server-plugin-project": "1.0.0-alpha.5",
    "@neo-one/smart-contract-compiler": "1.0.0-alpha.47",
    "@neo-one/smart-contract-test": "1.0.0-alpha.47",
    "@neo-one/smart-contract-typescript-plugin": "1.0.0-alpha.4",
    "@types/bignumber.js": "5.0.0",
    "@types/jest": "23.3.1",
    "@types/react": "16.4.11",
    "@types/react-dom": "16.0.7",
    "awesome-typescript-loader": "5.2.0",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "husky": "1.0.0-rc.13",
    "jest": "23.5.0",
    "jest-environment-node": "23.4.0",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "style-loader": "0.22.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.2",
    "svg-inline-loader": "0.8.0",
    "svg-url-loader": "2.3.2",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-clean-code": "0.2.7",
    "tslint-config-prettier": "1.15.0",
    "tslint-consistent-codestyle": "1.13.3",
    "tslint-immutable": "4.6.0",
    "tslint-microsoft-contrib": "5.2.0",
    "tslint-sonarts": "1.7.0",
    "typescript": "3.0.1",
    "typescript-styled-plugin": "0.10.0",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "dependencies": {
    "@neo-one/client": "1.0.0-alpha.90",
    "@neo-one/react": "1.0.0-alpha.3",
    "@neo-one/smart-contract": "1.0.0-alpha.23",
    "@reactivex/ix-es2015-cjs": "2.3.5",
    "bignumber.js": "7.2.1",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-icons": "3.0.5",
    "reakit": "0.14.3",
    "rxjs": "6.2.2",
    "styled-tools": "1.3.1"
  }
}
